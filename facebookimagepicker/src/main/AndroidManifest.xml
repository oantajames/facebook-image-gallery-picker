<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.imagepicker.facebook.facebookimagepicker">

    <application>

        <activity
            android:name="com.imagepicker.facebook.view.albums.FacebookAlbumsActivity"
            android:icon="@drawable/facebook"
            android:label="@string/facebook"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/ImagePickerTheme"/>

        <activity
            android:name="com.imagepicker.facebook.view.photos.FacebookPhotosActivity"
            android:icon="@drawable/facebook"
            android:label="@string/facebook"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:theme="@style/ImagePickerTheme"/>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            tools:replace="android:theme"/>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <service
            android:name="com.imagepicker.facebook.jobs.AlbumsJob"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

        <service
            android:name="com.imagepicker.facebook.jobs.LoginJob"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

        <service
            android:name="com.imagepicker.facebook.jobs.PhotosJob"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

        <service
            android:name="com.imagepicker.facebook.jobs.VerifyAccessTokenJob"
            android:exported="true">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>

    </application>

</manifest>
